# .env - 环境变量配置文件
# 优先级：环境变量 > 默认值

# 主机IP配置（用于生成图片URL）
HOST__IP=172.16.13.4

# 服务器配置
SERVER__HOST=0.0.0.0
SERVER__PORT=12010
SERVER__RELOAD=false

# Web UI配置
WEBUI__HOST=0.0.0.0
WEBUI__PORT=12011

# 消息队列配置
MQTT__broker_host=172.16.13.50
MQTT__broker_port=1883
MQTT__username=abtnet
MQTT__password=Abt@Rabbit#123

# 推理配置 cuda/hailo8
INFERENCE__DEVICE_TYPE=cuda
# 识别阈值
INFERENCE__RECOGNITION_SIMILARITY_THRESHOLD=0.8

# 应用配置
APP__TITLE=FastAPI人脸识别服务
APP__VERSION=0.1.0
APP__DEBUG=false
APP__MAX_CONCURRENT_TASKS=3
APP__STREAM_DEFAULT_LIFETIME_MINUTES=10
APP__STREAM_CLEANUP_INTERVAL_SECONDS=60
APP__RECOGNITION_SAVE_INTERVAL_SECONDS=0.6

# 日志配置
LOGGING__LEVEL=INFO
LOGGING__MAX_BYTES=52428800
LOGGING__BACKUP_COUNT=10

# 数据库配置
DATABASE__URL=sqlite:///./data/app.db
DATABASE__ECHO=false

# InsightFace配置
INSIGHTFACE__MODEL_PACK_NAME=buffalo_l
INSIGHTFACE__RECOGNITION_SIMILARITY_THRESHOLD=0.8
INSIGHTFACE__RECOGNITION_DET_SCORE_THRESHOLD=0.2
INSIGHTFACE__DETECTION_SIZE=[640,640]
INSIGHTFACE__LANCEDB_TABLE_NAME=faces_v2